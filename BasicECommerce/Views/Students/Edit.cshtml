@model FirstDbMVCApp.Models.ViewModels.CUStudentVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.NewStudent.Id" />
            <div class="form-group">
                <label asp-for="@Model.NewStudent.FullName" class="control-label"></label>
                <input asp-for="@Model.NewStudent.FullName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewStudent.Course" class="control-label"></label>
                <select asp-for="@Model.SelectedCourseId" asp-items="@Model.SelectItems"></select>
            </div>
                <input type="submit" value="Save" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

